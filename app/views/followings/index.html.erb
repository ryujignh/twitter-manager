<div class="container">
  <div class="row">
    <div class="col">
      <% if @error %>
        <%= @error %>
      <% else %>
        <ul class="list-group">
          <%= form_with url: destroy_multiple_followings_url, method: :delete, class: "form-control table" do |form| %>
            <% @followings.each do |following| %>
              <li class="list-group-item">
                <%= form.check_box(:ids, { multiple: true }, following[:id], nil) %>
                id:<%= following[:id] %> name:<%= following[:name] %> username:<%= following[:username] %>
              </li>
            <% end %>
            <%= form.submit %>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</div>
